@model Numeros
@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Binary Converter</h1>
</div>
<br />

<div class="text-center">
    <h4>Introduzca los valores</h4>

    <form method="post" asp-action="Index">
        <div class="form-group row">
            @for (int i = 0; i < 10; i++)
            {
            <div class="col-6">
                <br />
                <h6>Numero @(i + 1)</h6>
                <input type="number" max="9999999" asp-for="Numero[i]" required />
                <span asp-validation-for="Numero[i]"></span>
            </div>
            }
        </div>
        <button type="submit" class="btn btn-primary" asp-controller="Resultado" asp-action="ResultadoView">Convertir</button>
    </form>
</div>
