@model Numeros
@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>


<div >
    <h4>Introduzca los valores</h4>

    <form method="post" asp-action="Index">
        <div class="form-group row">
            @for (int i = 0; i < 10; i++)
            {
                <div class="col-6">
                    <br />
                    <h6>Numero @(i + 1)</h6>
                    <input asp-for="Numero[i]" required/>

                </div>
            }
        </div>
        <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="Privacy">Convertir</button>
    </form>
</div>
